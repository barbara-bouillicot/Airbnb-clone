<div class="container">
  <h2 class="mt-5"><%= @listing.name %></h2>

  <div class="d-flex flex-wrap mb-5">
    <% @listing.photos.each_with_index do |photo, index| %>
      <% if index.zero? %>
        <div class="col-sm-6">
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
        </div>
      <% else %>
        <% if index == 1 %>
        <div class="col-sm-6">
          <div class="row">
        <% end %>
          <div class="col-sm-6">
            <%= cl_image_tag photo.key, height: 150, width: 200, crop: :fill %>
          </div>
        <% if (index + 1) % 2 == 0 %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="container d-flex justify-content-between mt-5">
  <div class="reviews w-50">
    <h2><%= @reviews.count %> Reviews</h2>
    <% @reviews.each do |review| %>
      <div class="user d-flex">
        <div class="user-photo">
          <%= cl_image_tag(review.booking.user.photo.key, class: "avatar", alt: "avatar") %>
        </div>
        <div class="user-infos mx-3">
          <p><strong><%= review.booking.user.first_name %></strong><br><%= review.booking.user.address %></p>
        </div>
      </div>
      <p><i class="fa-solid fa-star"></i> <%= review.rating %></p>
      <p><%= review.comment %></p>
    <% end %>
  </div>
  <% unless current_user == @listing.user %>
  <div class="booking w-50">
    <h3><strong><%= @listing.price %> â‚¬ </strong>per day</h3>
   <!--<div data-controller="toggle" class="mt-5">
      <button data-action="click->toggle#fire" class="btn-app">Book</button>
      <div data-toggle-target="togglableElement" class="d-none">-->
      <%= render "bookings/new", booking: @booking %>
      <p>Total: </p>
      </div>
    </div>
    <% end %>
</div>



</div>

<div class="container d-flex flex-column align-items-center my-5">
  <h3>Where is located the listing?</h3>
  <p><%= @listing.address %></p>
  <div style="width: 90%; height: 400px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

<div class="container d-flex flex-column align-items-center my-5">
  <h3>Who is the host?</h3>
  <p><%= @listing.user.first_name %></p>
  <%= cl_image_tag @listing.user.photo.key, height: 150, width: 200, crop: :fill %>
</div>
