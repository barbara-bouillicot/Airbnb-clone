<div class="container w-25 my-3">
  <h1>List a new place</h1>

  <%= simple_form_for(@listing) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :availability_from,  as: :string, input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :availability_to, as: :string, input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :maximum_pets %>
    <%= f.input :home_type %>
    <%= f.input :price %>
    <%= f.submit class:"btn"%>
<% end %>
</div>
